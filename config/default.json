{
    "MONGO_URL": "",
    "users": [
        { "username": "test", "password": "123", "fullname": "Test User" },
        { "username": "admin", "password": "123", "fullname": "Administrator" }
    ],
    "collections": [
        {
            "name": "user",
            "humanName": "User",
            "previewUrl": "http://example.com/${uri}.html",
            "backboneForms": {
                "schema": {
                    "fullname": { "type": "Text", "title": "Full Name", "validators": ["required"] },
                    "firstname": { "type": "Text", "title": "First Name", "validators": ["required"] },
                    "lastname": { "type": "Text", "title": "Last Name", "validators": ["required"] },
                    "twitter.username": { "type": "Text", "title": "Twitter Usename", "help": "e.g. @pepe" },
                    "github.username": { "type": "Text", "title": "GitHub Usename", "help": "e.g. pepe" },
                    "dob": { "type": "Date", "title": "Day of Birth" },
                    "death_year": { "type": "Number", "title": "Death Year" },
                    "bio": { "type": "Aloha", "title": "Bio" },
                    "website_url": { "type": "Text", "validators": ["required", "url"], "title": "Website URL", "help": "please, include http:// prefix" },
                    "photo": { "type": "File", "title": "Photo" },
                    "created": { "type": "DateTime" },
                    "updated": { "type": "DateTime" },
                    "company": { "type": "Object", "title": "Company" },
                    "uri": {
                        "validators": [
                            "required",
                            { "type": "regexp", "regexp": "/^[0-9a-z-]{2,}[0-9a-z]$/g" }
                        ] 
                    }
                },
                "fieldsets": [
                    {
                        "legend": "Basic Information",
                        "fields": ["fullname", "firstname", "lastname", "dob", "photo"]
                    },
                    {
                        "legend": "About",
                        "fields": ["github.username", "twitter.username", "bio", "website_url"]
                    },
                    {
                        "legend": "Content Relations",
                        "fields": ["company"]
                    },
                    {
                        "legend": "System Data",
                        "fields": ["uri", "created", "updated"]
                    }
                ],
                "defaults": {
                }
            },
            "toStringField": "fullname",
            "fastSearch": {
                "find": { "fullname": "(^|\\W*):q" },
                "sort": { "updated": -1 },
                "limit": 10,
                "columns": ["lastname", "firstname", "uri", "created", "updated"]
            },
            "relations": { // mongorilla notation
                "company": {
                    "type": "HasOne",
                    "relatedCollection": "company"
                },
                "photo": {
                    "type": "HasOne",
                    "relatedCollection": "fs.files"
                }
            },
            "mongoose": {
                "schema": null
            },
            "readonly": false
        },
        {
            "name": "company",
            "humanName": "Company",
            "backboneForms": {
                "schema": {
                    "name": { "type": "Text", "title": "Name", "validators": ["required"] },
                    "description": { "type": "Aloha", "title": "Description" },
                    "uri": {
                        "validators": [
                            "required",
                            { "type": "regexp", "regexp": "/^[0-9a-z-]{2,}[0-9a-z]$/g" }
                        ] 
                    },
                    "created": { "type": "DateTime" },
                    "updated": { "type": "DateTime" }
                }
            },
            "relations": { // mongorilla notation
            },
            "toStringField": "name",
            "fastSearch": {
                "find": { "name": "(^|\\W*):q" },
                "sort": { "updated": -1 },
                "limit": 10,
                "columns": ["name", "uri", "created", "updated"]
            },
            "mongoose": {
                "schema": null
            }
        }
    ]
}
